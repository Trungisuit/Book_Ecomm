<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ProductActivity">

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_close"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/productdetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:text="Chi Tiết Sản Phẩm"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/close"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/sach1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.442"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/close" />

        <TextView
            android:id="@+id/bookname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:text="Hành trình người xuất chúng"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_book" />

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:text="Tác giả: "
            android:textSize="19dp"
            app:layout_constraintStart_toStartOf="@+id/bookname"
            app:layout_constraintTop_toBottomOf="@id/bookname"/>

        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:text="Lê Chí Linh"
            android:textSize="19dp"
            app:layout_constraintTop_toBottomOf="@id/bookname"
            app:layout_constraintLeft_toRightOf="@id/tv_author"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:text="Giá: "
            android:textSize="19dp"
            app:layout_constraintStart_toStartOf="@+id/tv_author"
            app:layout_constraintTop_toBottomOf="@+id/tv_author" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textColor="@color/black"
            android:text="90,000VND"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/tv_author"
            app:layout_constraintLeft_toRightOf="@id/tv_price"/>

        <Button
            android:id="@+id/btnAddtoCart"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:layout_marginTop="6dp"
            android:text="Thêm vào giỏ hàng"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_price"/>

        <TextView
            android:id="@+id/tv_decription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:text="Thông tin chi tiết"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/btnAddtoCart"
            app:layout_constraintTop_toBottomOf="@+id/btnAddtoCart" />

        <TableLayout
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:background="@drawable/tableborder"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/tv_decription"
            app:layout_constraintTop_toBottomOf="@+id/tv_decription" >

            <TableRow>
                <TextView
                    android:id="@+id/tv_issuing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="#BDB6C2"
                    android:text="Công ty phát hành "
                    android:textSize="16sp"
                    android:layout_column="1"/>

                <TextView
                    android:id="@+id/issuing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"

                    android:text="SBOOKS"
                    android:textSize="16sp"
                    android:layout_column="2"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/tv_datepublisher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="#BDB6C2"
                    android:text="Ngày phát hành "
                    android:textSize="16sp"
                    android:layout_column="1"/>

                <TextView
                    android:id="@+id/datepublisher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="2019-04-01 09:57:02"
                    android:textSize="16sp"
                    android:layout_column="2"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/tv_booksize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="#BDB6C2"
                    android:text="Kích thước"
                    android:textSize="16sp"
                    android:layout_column="1"/>

                <TextView
                    android:id="@+id/booksize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="14 x 20.5 cm"
                    android:textSize="16sp"
                    android:layout_column="2"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/tv_translator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="#BDB6C2"
                    android:text="Dịch giả"
                    android:textSize="16sp"
                    android:layout_column="1"/>

                <TextView
                    android:id="@+id/translator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="N/A"
                    android:textSize="16sp"
                    android:layout_column="2"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/tv_cover_material"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="#BDB6C2"
                    android:text="Loại bìa"
                    android:textSize="16sp"
                    android:layout_column="1"/>

                <TextView
                    android:id="@+id/cover_material"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Bìa cứng"
                    android:textSize="16sp"
                    android:layout_column="2"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/tv_page_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="#BDB6C2"
                    android:text="Số trang"
                    android:textSize="16sp"
                    android:layout_column="1"/>

                <TextView
                    android:id="@+id/page_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="293"
                    android:textSize="16sp"
                    android:layout_column="2"/>
            </TableRow>


        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
